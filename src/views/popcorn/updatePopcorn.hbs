<ol class="breadcrumb" style="background-color: #fff; font-weight: bold !important;">
    <li class="breadcrumb-item"><a href="/sanpham">Đồ ăn</a></li>
    <li class="breadcrumb-item active" aria-current="page">Cập nhật đồ ăn</li>  
</ol> 
<div class="container">
    <h6 style="padding: 10px 20px; font-weight: bold;">Cập nhật đồ ăn</h6>
    <hr> 
    {{#each objDoAn}}
    <form action="/sanpham/capnhat/{{this.idDoAn}}?_method=PUT" method="POST" class="container-form-add mx-auto" style="max-width: 900px;" enctype="multipart/form-data">
        <div class="row">
            <div class="col-sm-12">
                <div class="mb-3">
                    <label class="form-label" for="anh">Chọn ảnh</label>
                    <input type="file" id="anh" name="anh" class="form-control" value="{{anh}}">
                </div>

                <div class="mb-3">
                    <div id="output" class="rounded mx-auto d-block" style="width: 225px; height: 225px; overflow: hidden; background-color: aliceblue;">
                        <img id="img-preview" src="{{this.anh}}" style="width: 100%; height: 100%; object-fit: cover;" alt="Ảnh xem trước" />
                        <input type="text" name="urlAnh" value="{{this.anh}}" hidden>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="tenDoAn">Tên đồ ăn</label>
                    <input class="form-control" name="tenDoAn" id="tenDoAn" value="{{this.tenDoAn}}" readonly aria-describedby="helpYear" />
                </div>  

                <div class="mb-3">
                    <label class="form-label" for="coSan">Số lượng<span id="soLuongError" style="color: red; font-style: italic; margin-left: 10px;"></span></label>
                    <input type="number" class="form-control" value="{{this.coSan}}" name="coSan" id="soLuongInput" aria-describedby="helpYear" oninput="validateSoLuong()"/>
                </div>  
                <div class="mb-3">
                    <label class="form-label" for="giaDoAn">Giá sản phẩm<span id="giaError" style="color: red; font-style: italic; margin-left: 10px;"></span></label>
                    <input type="number" class="form-control" value="{{this.giaDoAn}}" oninput="validateGiaSP(this)"  name="giaDoAn" id="giaDoAn" aria-describedby="helpYear" />
                </div>                                                   
            </div>
        </div>

        <div class="text-center">
            <button class="btn btn-primary" type="submit" style="padding: 10px; min-width: 400px; font-weight: bold; margin: 10px 0px 40px 0;">Cập nhật</button>
        </div>
    </form>
    {{/each}}
</div>
<script src="../../public/js/imagePreview.js"></script>
<script src="../../public/js/validateForm.js"></script>