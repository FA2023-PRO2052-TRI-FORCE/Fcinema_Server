<ol class="breadcrumb" style="background-color: #fff; font-weight: bold !important;">
  <li class="breadcrumb-item"><a href="/nhanvien">Danh sách nhân viên</a></li>
  <li class="breadcrumb-item active" aria-current="page">Thêm nhân viên mới</li>
</ol>

<div class="container" style="background-color: #fff; ">
  <div class="col-sm-12">
    <form action="/nhanvien/them/luu" method="POST" id="nhanVienForm" class="container-form-add mx-auto" enctype="multipart/form-data">
      <div class="row">
        <div class="col-sm-6">
          <div class="mb-3">
            <label for="anh" class="form-label">Chọn ảnh</label>
              <input type="file" id="anh" name="anh" class="form-control" value="{{anh}}">
          </div>

          <div class="mb-3">
            <div class="rounded mx-auto d-block" style="width: 240px; height: 242px; overflow: hidden; background-color: aliceblue;">
              <img id="img-preview"  src="../../resources/img/default_img.png" style="width: 100%; height: 100%; object-fit: cover;" alt="Ảnh xem trước" />
            </div>
          </div>

          <div class="mb-3">
            <label for="idNhanVien" class="form-label">Mã nhân viên<span id="idNVError" style="color: red; font-style: italic; margin-left: 10px;"></span></label>
              <input id="idNhanVien" name="idNhanVien" class="form-control" type="text" oninput="validateID()">
          </div>

          <div class="mb-3">
            <label for="matKhau" class="form-label">Mật khẩu</label>
              <input id="matKhau" name="matKhau" class="form-control" type="text">
          </div>
        </div>

        <div class="col-sm-6">
           <div class="mb-3">
                <label class=" control-label form-label ">Họ tên<span id="hoTenError" style="color: red; font-style: italic; margin-left: 10px;"></span></label>
                <input class="form-control" required type="text" name="hoTen" id="hoTenInput" value="{{hoTen}}" oninput="validateHoTen()">
            </div>

         <div class="mb-3">
                <label class="control-label form-label">Email<span id="emailError" style="color: red; font-style: italic; margin-left: 10px;"></span></label>
                <input class="form-control" required type="text" id="email" name="email" value="{{email}}" oninput="validateEmail()">
            </div>

            <div class="mb-3">
                <label class="control-label form-label">Số điện thoại    <span id="dienThoaiError" style="color: red; font-style: italic; margin-left: 10px;"></span></label>
                <input class="form-control" required type="text" id="dienThoai" name="dienThoai" value="{{dienThoai}}" oninput="validateDienThoai()">
            </div>

            <div class="mb-3">
                <label class="control-label form-label">Địa chỉ<span id="diaChiError" style="color: red; font-style: italic; margin-left: 10px;"></span></label>
                <input class="form-control" required type="text" id="diaChi" name="diaChi" value="{{diaChi}}" oninput="validateDiaChi()">
            </div>

            <div class="mb-3">
                <label class="form-label" for="gioiTinh">Giới tính</label>
                <select id="gioiTinh" name="gioiTinh" class="form-control">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>                    
                </select>
            </div>

            <div class="mb-3">
                <label class="col-md-3 control-label form-label">Ngày sinh</label>
                <input class="form-control" required readonly autocomplete="off" type="text" id="pickadatepicker" name="ngaySinh" value="{{parseDate ngaySinh}}"  >
            </div>  
        </div>
      </div>

      <div class="mb-3 text-center">
        <button id="btn-submit" class="btn btn-primary" type="submit" style="padding: 10px; min-width: 400px; font-weight: bold; margin: 10px;">Thêm mới</button>
      </div>
    </form>
  </div>
</div>

<script src="../../public/js/validateForm.js"></script>
<script src="../../public/js/imagePreview.js"></script>