<ol class="breadcrumb" style="background-color: #fff; font-weight: bold !important; col; border-radius:0;">
    <li class="breadcrumb-item"><a href="/lichchieu">Lịch Chiếu</a></li>
    <li class="breadcrumb-item active" aria-current="page">Cập nhật lịch chiếu</li>  
</ol> 
<div class="container" >
    <h6 style="padding: 10px 20px; font-weight: bold;">Chi tiết lịch chiếu</h6>
    <hr>  
    {{#each objectLichChhieu}}
    <form action="/lichchieu/sua/luu/{{this.idLichChieu}}?_method=PUT" method="POST" class="container-form-add mx-auto" style="max-width: 900px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="mb-3">
                    <label class="form-label" for="idPhim">Tên Phim</label>
                    <input type="text" class="form-control" disabled value="{{this.tenPhim}}">
                    
                </div>
                <div class="mb-3">
                    <label class="form-label" for="idPhongChieu">Phòng chiếu</label>
                    <input type="text" class="form-control" disabled value="{{this.tenPhongChieu}}">
                    <input type="text" name="idPhongChieu" class="form-control" hidden value="{{this.idPhongChieu}}" >
                    
                    
                </div>
                <div class="mb-3">
                    <label class="form-label" for="caChieu">Ca Chiếu</label>
                    <select id="caChieu" name="caChieu"  class="form-control" >
                        <option value="Ca 1: 8-10h" {{#eq "Ca 1: 8-10h" this.caChieu}}selected{{/eq}}>Ca 1: 8-10h</option>
                        <option value="Ca 2: 13h-15h" {{#eq "Ca 2: 13h-15h" this.caChieu}}selected{{/eq}}>Ca 2: 13h-15h</option>
                        <option value="Ca 3: 16-19h30" {{#eq "Ca 3: 16-19h30" this.caChieu}}selected{{/eq}}>Ca 3: 16-19h30</option>
                        <option value="Ca 4: 20-23h" {{#eq "Ca 4: 20-23h" this.caChieu}}selected{{/eq}}>Ca 4: 20-23h</option>
                    </select>
                </div>                                
                <div class="mb-3">
                    <label class="form-label" for="showDate">Ngày chiếu</label>
                    <input class="form-control" id="datepicker" type="text" value="{{parseDate this.ngayChieu}}" name="ngayChieu" required readonly autocomplete="off"  aria-describedby="helpId" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price" style="font-weight: normal;">Giá phim<span id="error-message" style="color: red; font-style: italic; margin-left: 10px;"></span></label>
                    <input class="form-control" value="{{ this.giaPhim}}"  oninput="validateGiaPhim(this)"  required type="number" name="giaPhim" id="giaPhim" aria-describedby="helpId" />
                </div>
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" id="btn-showtime" type="submit" style="padding: 10px; min-width: 400px; font-weight: bold; margin: 10px;">Cập nhật lịch chiếu</button>
        </div>
    </form>
    {{/each}}
</div>
<div>
    {{> notifications}}    
</div>

<script src="../../public/js/validateForm.js"></script>