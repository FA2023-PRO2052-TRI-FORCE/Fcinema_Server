<ol class="breadcrumb" style="background-color: #fff; font-weight: bold !important;">
  <li class="breadcrumb-item active" aria-current="page">Danh sách khách hàng</li>
</ol> 
<div class="container">
  <div class="input-group d-flex justify-content-between" style="align-items: center;">
    <h6 style="padding: 0 20px; font-weight: bold;">Danh sách khách hàng</h6>
    </div>
  <hr>  
  <table id="data-table" class="table table-bordered"style="width:100%">
    <thead class="thead-dark">
      <tr>
        <th class="p-2 text-center">#</th>
        <th class="p-2 text-center">Ảnh</th>
        <th class="p-2 text-center">Họ tên</th>
        <th class="p-2 text-center">Email</th>
        <th class="p-2 text-center">Địa chỉ</th>
        <th class="p-2 text-center">Ngày sinh</th>
        <th class="p-2 text-center" style="width: 111.2px;">Thao tác</th>
      </tr>
    </thead>
    <tbody>
      {{#each listKH}}
      <tr class="">
        <td>{{sum 1 @index }}</td>
        <td class=" align-middle p-2 text-center" style="width: 75px; height: 75px; overflow: hidden;"><img src="{{this.anh}}"  style="width: 100%; height: 100%; object-fit: cover;" class="img-thumbnail rounded-circle me-2" alt=""></td>
         <td class="p-2 text-center align-items-center align-middle">{{this.hoTen}}</td>
         <td class="p-2 text-center align-items-center align-middle">{{this.email}}</td>
         <td class="p-2 text-center align-items-center align-middle">{{this.diaChi}}</td>
         <td class="p-2 text-center align-items-center align-middle">{{formatDate this.ngaySinh}}</td>
         <td class=" align-middle">
          <a href="/khachhang/{{this.email}}" class="btn btn-success" style="margin-bottom: 10px; width: 90px;">Chi tiết</a>
          {{#eq this.trangThaiNguoiDung 2}}
          <button  class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-email="{{this.email}}" style="margin-bottom: 10px; ">Xác nhận</button>
          {{/eq}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>