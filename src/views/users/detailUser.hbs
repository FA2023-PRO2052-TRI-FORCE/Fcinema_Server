<ol class="breadcrumb" style="background-color: #fff; font-weight: bold !important;">
  <li class="breadcrumb-item"><a href="/khachhang">Danh sách khách hàng</a></li>
  <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
</ol>
<div class="container d-flex" style=" background-color: #fff;">
  <div class="col-sm-12">
    {{#each listKH}}
    <form action="/nhanvien/sua/luu/{{email}}?_method=PUT" method="POST" id="nhanVienForm" enctype="multipart/form-data">
      <div class="row">
        <div class="col-sm-6">
          <div class="mb-3">
            <label for="anh" class="col-4 form-label">Ảnh</label>
          </div>

          <div class="mb-3">
            <div id="img-preview" class="rounded mx-auto d-block" style="width: 255px; height: 260px; overflow: hidden; background-color: aliceblue;">
              <img class="rounded-circle me-2" id="img-preview-img" src="{{this.anh}}" style="width: 100%; height: 100%; object-fit: cover;" alt="Ảnh" />
            </div>
          </div>

          <div class="mb-3">
            <label for="hoTen" class="col-4 form-label">Họ tên</label>
              <input id="hoTen" name="hoTen" placeholder="Họ tên" value="{{this.hoTen}}" class="form-control" disabled type="text">
          </div>

          <div class="mb-3">
            <label for="matKhau" class="col-4 form-label">Mật khẩu</label>
              <input id="matKhau" name="matKhau" value="{{this.matKhau}}" placeholder="Mật khẩu" class="form-control" disabled type="text">
          </div>
        </div>

        <div class="col-sm-6">
          <div class="mb-3">
            <label for="email" class="col-4 form-label">Email</label>
              <input id="email" name="email" placeholder="Email" value="{{this.email}}" class="form-control" disabled required="required" type="text">
          </div>

          <div class="mb-3">
            <label for="dienThoai" class="col-4 form-label">Số điện thoại</label>
              <input id="dienThoai" name="dienThoai" value="{{this.dienThoai}}" placeholder="Số điện thoại" class="form-control" disabled type="text">
          </div>

          <div class="mb-3">
            <label for="diaChi" class="col-4 form-label">Địa chỉ</label>
              <input id="diaChi" name="diaChi" placeholder="Địa chỉ" value="{{this.diaChi}}" class="form-control" disabled type="text">
          </div>

          <div class="mb-3">
            <label class="form-label" for="gioiTinh">Giới tính</label>
            <select id="gioiTinh" name="gioiTinh" class="form-control" disabled>
              <option value="Nam" {{#eq "Nam" this.gioiTinh}}selected{{/eq}}>Nam</option>
              <option value="Nữ" {{#eq "Nữ" this.gioiTinh}}selected{{/eq}}>Nữ</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="ngaySinh" class="col-4 form-label">Ngày sinh</label>
              <input id="ngaySinh" name="ngaySinh" value="{{formatDate ngaySinh}}" placeholder="" class="form-control" disabled>
            </div>

            <div class="mb-3">
              <label for="ngaySinh" class="col-4 form-label">Trạng thái tài khoản</label>
                <input id="ngaySinh" name="ngaySinh" value="{{convertStatusUser trangThaiNguoiDung}}"class="form-control" disabled>
            </div>
          </div>
        </div>
    </form>
    {{/each}}
  </div>
</div>