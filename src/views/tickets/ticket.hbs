<ol class="breadcrumb" style="background-color: #fff; font-weight: bold !important;">
  <li class="breadcrumb-item active" aria-current="page">Vé Đã Đặt</li>
</ol>
<div class="" style=" background-color: #fff;">
  <div class="col-sm-12" style="margin: 10px;">
    <div class="row">
      <div class="input-group d-flex justify-content-between" style="align-items: center;">
        <h6 style="padding: 0 20px; font-weight: bold;">Danh sách vé đã đặt</h6>
        <a type="button" href="/ve/them" class="btn btn-primary" style="margin: 20px; border-radius: 5px; font-weight: bold;">Thêm vé mới</a>
      </div>
      <hr>

      <table id="data-table" class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th class="p-2 text-center align-middle" scope="col">#</th>
            <th class="p-2 text-center align-middle" scope="col">Mã vé</th>
            <th class="p-2 text-center align-middle" scope="col">Tên phim</th>
            <th class="p-2 text-center align-middle" scope="col">Ngày chiếu</th>
            <th class="p-2 text-center align-middle" scope="col">Ca chiếu</th>
            <th class="p-2 text-center align-middle" scope="col">Vị trí ghế</th>
            <th class="p-2 text-center align-middle" scope="col">Tổng tiền</th>
            <th class="p-2 text-center align-middle" scope="col">Trạng thái</th>
            <th class="p-2 text-center align-middle" scope="col">Hành động</th>
          </tr>
        </thead>
        <tbody>
          {{#each listVe}}
          <tr>
            <td class="p-2 text-center align-middle" scope="row">{{sum 1 @index }}</td>
            <td class="p-2 text-center align-middle" scope="col">{{this.idVe}}</td>
            <td class="p-2 text-center align-middle" scope="col">{{this.tenPhim}}</td>
            <td class="p-2 text-center align-middle" scope="col">{{formatDate this.ngayChieu}}</td>
            <td class="p-2 text-center align-middle" scope="col">{{this.tenPhongChieu}}: {{this.caChieu}}</td>
            <td class="p-2 text-center align-middle" scope="col">{{this.tenGhe}}</td>
            <td class="p-2 text-center align-middle" scope="col">{{formatCurrency this.tongTien 'vnd'}}</td>
            <td class="p-2 text-center align-middle" scope="col">
              <span style="display: inline-block; min-width: 130px; border-radius: 5px; padding: 5px; color: #fff; background-color:
                {{#eq this.trangThai 0}}#28a745{{/eq}}
                {{#eq this.trangThai 1}}#dc3545{{/eq}}
                {{#eq this.trangThai 2}}#332D2D{{/eq}}">
                {{convertStatusTicket this.trangThai}}
              </span>
            </td>
            <td class="p-2 text-center align-middle">
              <a href="/ve/chitiet/{{this.idVe}}" type="button" style="margin-bottom: 10px; width: 90px;" class="btn btn-success">Chi tiết</a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<!--modal xác nhận xoá -->
<div class="modal fade" tabindex="-1" role="dialog" id="delete-ve-dat">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận xóa</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>        
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xóa vé này</p>
      </div>
      <div class="modal-footer">
        <button type="button" id="btn-delete-product" class="btn btn-danger">Xóa</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>